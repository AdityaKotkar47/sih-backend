<%- include('../layouts/main', { 
    title: title,
    description: `Documentation and examples for ${section}`
  }) %>
  
  <div class="relative mx-auto flex max-w-8xl justify-center sm:px-2 lg:px-8 xl:px-12">
    <%- include('../partials/doc-sidebar') %>
    
    <div class="min-w-0 max-w-2xl flex-auto px-4 py-16 lg:max-w-none lg:pl-8 lg:pr-0 xl:px-16">
      <article>
        <!-- Article header -->
        <header class="mb-9 space-y-1">
          <p class="font-display text-sm font-medium text-sky-500">
            <%= section.charAt(0).toUpperCase() + section.slice(1) %>
          </p>
          <h1 class="font-display text-3xl tracking-tight text-slate-900 dark:text-white">
            <%= title %>
          </h1>
        </header>
  
        <!-- Article content -->
        <div class="prose prose-slate max-w-none dark:prose-invert dark:text-slate-400 prose-headings:scroll-mt-28 prose-headings:font-display prose-headings:font-normal lg:prose-headings:scroll-mt-[8.5rem]">
          <!-- Content will be dynamically rendered based on the section -->
          <%- content %>
        </div>
      </article>
  
      <!-- Navigation footer -->
      <dl class="mt-12 flex border-t border-slate-200 pt-6 dark:border-slate-800">
        <% if (prev) { %>
        <div class="mr-auto text-left">
          <dt class="text-sm font-normal text-slate-600 dark:text-slate-400">Previous</dt>
          <dd class="mt-1">
            <a href="<%= prev.href %>" class="text-base font-semibold text-slate-900 hover:text-slate-600 dark:text-white dark:hover:text-slate-300">
              <%= prev.title %>
            </a>
          </dd>
        </div>
        <% } %>
        
        <% if (next) { %>
        <div class="ml-auto text-right">
          <dt class="text-sm font-normal text-slate-600 dark:text-slate-400">Next</dt>
          <dd class="mt-1">
            <a href="<%= next.href %>" class="text-base font-semibold text-slate-900 hover:text-slate-600 dark:text-white dark:hover:text-slate-300">
              <%= next.title %>
            </a>
          </dd>
        </div>
        <% } %>
      </dl>
    </div>
  
    <%- include('../partials/docs-right-sidebar', { sections: pageSections }) %>
  </div>