<div class="hidden xl:sticky xl:top-[4.5rem] xl:-mr-6 xl:block xl:h-[calc(100vh-4.5rem)] xl:flex-none xl:overflow-y-auto xl:py-16 xl:pr-6"></div>
    <nav aria-label="On this page" class="w-56">
        <h2 class="font-display text-sm font-medium text-slate-900 dark:text-white">On this page</h2>
        <ol role="list" class="mt-4 space-y-3 text-sm">
            <% if (typeof sections !== 'undefined') { %>
                <% sections.forEach(function(section) { %>
                    <li>
                        <h3>
                            <a href="#<%= section.id %>" class="<%= section.subsections ? 'font-medium' : '' %> text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300">
                                <%= section.title %>
                            </a>
                        </h3>
                        <% if (section.subsections) { %>
                            <ol role="list" class="mt-2 space-y-3 pl-5">
                                <% section.subsections.forEach(function(subsection) { %>
                                    <li>
                                        <a href="#<%= subsection.id %>" class="text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300">
                                            <%= subsection.title %>
                                        </a>
                                    </li>
                                <% }); %>
                            </ol>
                        <% } %>
                    </li>
                <% }); %>
            <% } %>
        </ol>
    </nav>
    <div class="mt-8 flex justify-center">
        <a href="#" class="inline-flex items-center gap-2 rounded-md bg-slate-800 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-700 dark:bg-slate-700 dark:hover:bg-slate-600" id="edit-page">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Edit this page
        </a>
    </div>
</div>